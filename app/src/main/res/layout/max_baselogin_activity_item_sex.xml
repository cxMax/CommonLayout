<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/user_info_sexLayout_content"
        style="@style/userinfomation_modify_framelayout"
        android:paddingLeft="@dimen/y_space_20"
        android:paddingRight="@dimen/y_space_20" >

        <TextView
            android:id="@+id/user_info_sexLayout_sexTV"
            style="@style/userinfomation_setting_textView_Dark"
            android:layout_gravity="center_vertical"
            android:text="@string/common_male" />

        <CheckBox
            android:id="@+id/user_info_sexLayout_sexCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/y_space_20"
            android:button="@drawable/max_baselogin_sex_checkbox_shape" />
    </FrameLayout>


</LinearLayout>