<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimationStyle</item>
    </style>

    <!-- 界面主题带动画 -->
    <style name="ActivityAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_in_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_in_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_out_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_out_anim</item>
    </style>

    <style name="AppText_Base">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="userinfomation_setting_textView_Dark" parent="AppText_Base">
        <item name="android:layout_marginLeft">@dimen/y_space_10</item>
        <item name="android:orientation">vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/common_text</item>
        <item name="android:textSize">@dimen/y_space_28</item>
    </style>

    <style name="userinfomation_modify_framelayout" parent="userinfomation_modify_layout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="userinfomation_modify_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y_space_100</item>
    </style>
</resources>
